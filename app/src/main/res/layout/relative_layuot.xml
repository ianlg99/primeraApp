<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cajaRosa"
        android:layout_width="@dimen/dimen180"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="@color/rosa">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Holaaaaaa" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cajaVerde"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/verde"
        android:layout_toStartOf="@+id/cajaRosa"
        android:layout_alignBottom="@id/cajaRosa"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="40dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cajaNaranja"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/cajaRosa"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@color/naranja" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cajaAzul"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/cajaNaranja"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/azul"/>


</RelativeLayout>